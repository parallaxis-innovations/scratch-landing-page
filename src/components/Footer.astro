	<script>
		const currentYearElement = document.getElementById("currentYear");
		if (currentYearElement) {
			currentYearElement.textContent = new Date()
				.getFullYear()
				.toString();
		}
	</script>

	<style>
		.footer {
			background: var(--dark-bg);
			border-top: 1px solid var(--tertiary-dark);
			padding: 60px 0 20px;
		}

		.footer-content {
			display: grid;
			grid-template-columns: 4fr 2fr;
			gap: 60px;
			margin-bottom: 40px;
		}

		.brand-name {
			display: flex;
			font-family: "Playfair Display", serif;
			font-size: 2rem;
			font-weight: 700;
			margin-bottom: 16px;
		}

		.brand-logo {
			display: flex;
			flex-direction: row;
			justify-items: center;
			align-items: center;
			gap: 16px;
		}

		.footer-brand img {
			height: 40px;
			width: 40px;
			object-fit: contain;
			border-radius: 8px;
		}

		@media (max-width: 768px) {
			.footer-brand img {
				height: 32px;
				width: 32px;
			}
		}

		.brand-description {
			color: var(--text-muted);
			line-height: 1.6;
			margin-bottom: 4px;
			max-width: 300px;
		}

		.social-links {
			display: flex;
			gap: 16px;
		}

		.social-link {
			width: 40px;
			height: 40px;
			background: var(--tertiary-dark);
			border-radius: 50%;
			display: flex;
			align-items: center;
			justify-content: center;
			color: var(--text-muted);
			text-decoration: none;
			transition: all 0.3s ease;
		}

		.social-link:hover {
			background: var(--primary-gold);
			color: var(--dark-bg);
			transform: translateY(-2px);
		}

		.footer-links {
			display: grid;
			grid-template-columns: repeat(2, 1fr);
			/* gap: 40px; */
		}

		.link-title {
			color: var(--text-light);
			font-size: 1.1rem;
			font-weight: 600;
			margin-bottom: 16px;
		}

		.link-list {
			list-style: none;
		}

		.link-list li {
			margin-bottom: 8px;
		}

		.icon-wrapper {
			size: 40px;
			margin-right: 8px;
		}
		.link-list a {
			color: var(--text-muted);
			text-decoration: none;
			transition: color 0.3s ease;
		}

		.link-list a:hover {
			color: var(--primary-gold);
		}

		.footer-bottom {
			border-top: 1px solid var(--tertiary-dark);
			padding-top: 20px;
			display: flex;
			justify-content: space-between;
			align-items: center;
			color: var(--text-muted);
			font-size: 0.9rem;
		}

		.contact-info {
			display: flex;
			flex-direction: column;
			gap: 8px;
			color: var(--text-muted);
			margin-bottom: 24px;
		}

		.propriety {
			font-size: 1rem;
			color: var(--text-muted);
			line-height: 1.8;
			margin-bottom: 15px;
		}

		.contact-info a {
			color: var(--text-muted);
			text-decoration: none;
			transition: color 0.3s ease;
		}
		.info-text a {
			color: var(--primary-gold);
			text-decoration: none;
			font-weight: 500;
			font-size: 0.9rem;
		}

		@media (max-width: 1024px) {
			.footer-content {
				grid-template-columns: 1fr;
				/* gap: 40px; */
			}

			.footer-links {
				grid-template-columns: repeat(2, 1fr);
			}
		}

		@media (max-width: 768px) {
			.footer {
				padding: 40px 0 20px;
			}

			/* .footer-links {
				grid-template-columns: 2fr;
				gap: 30px;
			} */

			.footer-bottom {
				flex-direction: column;
				gap: 8px;
				text-align: center;
			}

			.brand-description {
				max-width: none;
			}
		}

	</style>
</footer>
