<section id="hero" class="hero">
	<div class="container">
		<div class="hero-content">
			<h1 class="hero-title fade-in">
				<span class="gradient-text">Scratch</span><br>
				Uncover the Hottest<br>
				Nights Around You!
			</h1>
			<p class="hero-subtitle fade-in">
				Discover curated parties, private sets, and VIP moments in your city. 
				Join the exclusive nightlife community and never miss the best events again.
			</p>
			<div class="hero-buttons fade-in">
				<a href="#download" class="btn-primary">
					<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
						<polyline points="7,10 12,15 17,10"/>
						<line x1="12" y1="15" x2="12" y2="3"/>
					</svg>
					Get Started
				</a>
				<a href="#features" class="btn-secondary">
					Learn More
				</a>
			</div>
		</div>
		<div class="hero-visual fade-in">
			<div class="phone-mockup">
				<div class="phone-screen">
					<div class="app-preview">
						<h3>Uncover the Hottest Nights Around You!</h3>
						<p>Curated parties, private sets, and VIP moments near you.</p>
						<div class="preview-button">Get Started</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.hero {
		position: relative;
		min-height: 100vh;
		display: flex;
		align-items: center;
		background: var(--gradient-dark);
		overflow: hidden;
	}

	.hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: radial-gradient(circle at 50% 50%, rgba(212, 175, 55, 0.1) 0%, transparent 70%);
		pointer-events: none;
	}

	.container {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 60px;
		align-items: center;
		position: relative;
		z-index: 1;
	}

	.hero-title {
		font-family: 'Playfair Display', serif;
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 700;
		line-height: 1.1;
		margin-bottom: 24px;
	}

	.hero-subtitle {
		font-size: 1.25rem;
		color: var(--text-muted);
		margin-bottom: 40px;
		max-width: 500px;
	}

	.hero-buttons {
		display: flex;
		gap: 20px;
		flex-wrap: wrap;
	}

	.hero-visual {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.phone-mockup {
		position: relative;
		width: 280px;
		height: 580px;
		background: var(--secondary-dark);
		border-radius: 40px;
		padding: 20px;
		box-shadow: var(--shadow-dark);
		border: 3px solid var(--tertiary-dark);
	}

	.phone-screen {
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, #0A0A0A 0%, #1A1A1A 100%);
		border-radius: 30px;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		overflow: hidden;
	}

	.phone-screen::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('https://images.pexels.com/photos/1763075/pexels-photo-1763075.jpeg?auto=compress&cs=tinysrgb&w=400');
		background-size: cover;
		background-position: center;
		opacity: 0.3;
		z-index: 1;
	}

	.app-preview {
		position: relative;
		z-index: 2;
		text-align: center;
		padding: 40px 20px;
		background: linear-gradient(135deg, rgba(10, 10, 10, 0.9) 0%, rgba(26, 26, 26, 0.9) 100%);
		border-radius: 20px;
		margin: 20px;
	}

	.app-preview h3 {
		font-family: 'Playfair Display', serif;
		font-size: 1.5rem;
		color: var(--primary-gold);
		margin-bottom: 16px;
		line-height: 1.2;
	}

	.app-preview p {
		color: var(--text-muted);
		font-size: 0.9rem;
		margin-bottom: 24px;
	}

	.preview-button {
		background: var(--gradient-primary);
		color: var(--dark-bg);
		padding: 12px 24px;
		border-radius: 8px;
		font-weight: 600;
		font-size: 0.9rem;
		display: inline-block;
	}

	@media (max-width: 1024px) {
		.container {
			grid-template-columns: 1fr;
			text-align: center;
			gap: 40px;
		}
		
		.hero-title {
			font-size: clamp(2rem, 4vw, 3rem);
		}
		
		.phone-mockup {
			width: 240px;
			height: 500px;
		}
	}

	@media (max-width: 768px) {
		.hero {
			min-height: 90vh;
			padding: 40px 0;
		}
		
		.hero-buttons {
			justify-content: center;
		}
		
		.btn-primary, .btn-secondary {
			padding: 14px 28px;
			font-size: 15px;
		}
		
		.phone-mockup {
			width: 200px;
			height: 420px;
		}
		
		.app-preview {
			padding: 30px 15px;
		}
		
		.app-preview h3 {
			font-size: 1.2rem;
		}
	}
</style>