<section id="hero" class="hero">
	<div class="container">
		<div class="hero-content">
			<h1 class="hero-title">
				<span class="gradient-text">Scratch</span><br />
				Uncover the Hottest<br />
				Nights Around You!
			</h1>
			<p class="hero-subtitle">
				Discover curated parties, private sets, and VIP moments in your
				city. Join the exclusive nightlife community and never miss the
				best events again.
			</p>
			<div class="hero-buttons">
				<a href="#download" class="btn-primary">
					<svg
						width="20"
						height="20"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
					>
						<path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"
						></path>
						<polyline points="7,10 12,15 17,10"></polyline>
						<line x1="12" y1="15" x2="12" y2="3"></line>
					</svg>
					Get Started
				</a>
				<a href="#features" class="btn-secondary"> Learn More </a>
			</div>
		</div>

		<div class="hero-visual">
			<img src="home.png" alt="App mockup" class="mockup" />
		</div>
	</div>
</section>

<style>
	.hero {
		position: relative;
		min-height: 100vh;
		display: flex;
		align-items: center;
		background: var(--gradient-dark);
		overflow: hidden;
		padding: 20px 0;
	}

	.hero::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: radial-gradient(
			circle at 50% 50%,
			rgba(212, 175, 55, 0.1) 0%,
			transparent 70%
		);
		pointer-events: none;
	}

	.container {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 40px;
		align-items: center;
		position: relative;
		z-index: 1;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 16px;
	}

	.hero-content {
		display: flex;
		flex-direction: column;
		justify-content: center;
	}

	.hero-title {
		font-family: "Playfair Display", serif;
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 700;
		line-height: 1.1;
		margin-bottom: 20px;
	}

	.hero-subtitle {
		font-size: 1.25rem;
		color: var(--text-muted);
		margin-bottom: 40px;
		max-width: 500px;
	}

	.hero-buttons {
		display: flex;
		gap: 20px;
		flex-wrap: wrap;
	}

	.hero-visual {
		display: flex;
		justify-content: center;
		align-items: center;
		width: 600px;
		height: 700px;
	}

	.mockup {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
	}

	@media (max-width: 1024px) {
		.container {
			grid-template-columns: 1fr;
			text-align: center;
			gap: 40px;
		}

		.hero-title {
			font-size: clamp(2rem, 4vw, 3rem);
		}

		.hero-subtitle {
			margin-left: auto;
			margin-right: auto;
		}

		.hero-buttons {
			justify-content: center;
		}

		.hero-visual {
			width: 100%;
			height: auto;
			max-height: 600px;
		}
	}

	@media (max-width: 768px) {
		.hero {
			min-height: 90vh;
			padding: 40px 0;
		}

		.hero-buttons {
			justify-content: center;
		}

		.btn-primary,
		.btn-secondary {
			padding: 14px 28px;
			font-size: 15px;
		}

		.hero-visual {
			width: 100%;
			height: auto;
			max-height: 400px;
		}
	}

	@media (max-width: 480px) {
		.container {
			padding: 0 12px;
		}

		.hero-title {
			font-size: clamp(1.25rem, 4vw, 1.75rem);
		}

		.hero-subtitle {
			font-size: clamp(0.75rem, 2vw, 0.875rem);
		}

		.btn-primary,
		.btn-secondary {
			padding: 10px 16px;
			font-size: 0.875rem;
		}

		.hero-visual {
			max-height: 300px;
		}
	}

</style>
