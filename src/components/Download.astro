						<div class="btn-text">
							<span class="btn-label">Download on the</span>
							<span class="btn-store">App Store</span>
						</div>
					</a>
				</div>
			</div>
			<div class="phone-showcase">
				<div class="phone-frame">
					<img
						src="/login.png"
						alt="App interface"
						class="app-interface-image"
					/>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.download {
		background: var(--secondary-dark);
		position: relative;
	}

	.download::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: radial-gradient(
			circle at 30% 70%,
			rgba(212, 175, 55, 0.1) 0%,
			transparent 70%
		);
		pointer-events: none;
	}

	.download-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 80px;
		align-items: center;
		position: relative;
		z-index: 1;
	}

	.section-title {
		font-family: "Playfair Display", serif;
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 700;
		margin-bottom: 24px;
		color: var(--text-light);
	}

	.download-description {
		font-size: 1.1rem;
		color: var(--text-muted);
		line-height: 1.8;
		margin-bottom: 40px;
	}

	.download-buttons {
		display: flex;
		gap: 20px;
		flex-wrap: wrap;
	}

	.download-btn {
		display: flex;
		align-items: center;
		gap: 16px;
		padding: 16px 24px;
		background: var(--tertiary-dark);
		border: 2px solid var(--primary-gold);
		border-radius: 16px;
		color: var(--text-light);
		text-decoration: none;
		transition: all 0.3s ease;
		min-width: 200px;
	}

	.download-btn:hover {
		background: var(--primary-gold);
		color: var(--dark-bg);
		transform: translateY(-2px);
		box-shadow: var(--shadow-gold);
	}

	.btn-icon {
		color: var(--primary-gold);
		transition: color 0.3s ease;
	}

	.download-btn:hover .btn-icon {
		color: var(--dark-bg);
	}

	.btn-text {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
	}

	.btn-label {
		font-size: 0.8rem;
		opacity: 0.8;
		margin-bottom: 2px;
	}

	.btn-store {
		font-size: 1.1rem;
		font-weight: 600;
	}

	.phone-showcase {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.phone-frame {
		width: 400px;
		height: 750px;
	}

	.app-interface-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
		border-radius: 30px;
	}

	@media (max-width: 1024px) {
		.download-content {
			grid-template-columns: 1fr;
			gap: 50px;
			text-align: center;
		}

		.download-buttons {
			justify-content: center;
		}
	}

	@media (max-width: 768px) {
		.download-buttons {
			flex-direction: column;
			align-items: center;
		}

		.download-btn {
			width: 100%;
			max-width: 280px;
			justify-content: center;
		}

		.phone-frame {
			width: 260px;
			height: 520px;
		}

		.app-interface-image {
			border-radius: 24px; /* Adjusts for smaller phone frame */
		}
	}
</style>
