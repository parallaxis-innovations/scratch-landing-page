<section id="download" class="section download">
	<div class="container">
		<div class="download-content">
			<div class="download-text fade-in">
				<h2 class="section-title">
					Ready to <span class="gradient-text">Scratch</span> the Surface?
				</h2>
				<p class="download-description">
					Download the app and join thousands of party enthusiasts discovering the hottest nights in their city. 
					Your next unforgettable experience is just a tap away.
				</p>
				<div class="download-buttons">
					<a href="#" class="download-btn">
						<div class="btn-icon">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none">
								<path d="M5.8 21.8C5.3 21.4 5 20.8 5 20.2V3.8C5 3.2 5.3 2.6 5.8 2.2L6.1 2.5L13.7 10.1C14.1 10.5 14.1 11.1 13.7 11.5L6.1 19.1L5.8 21.8Z" fill="currentColor"/>
								<path d="M15.8 12.8L18.2 11.2C18.6 10.9 18.6 10.3 18.2 10L15.8 8.4L13.7 10.5C14.1 10.9 14.1 11.5 13.7 11.9L15.8 12.8Z" fill="currentColor"/>
							</svg>
						</div>
						<div class="btn-text">
							<span class="btn-label">GET IT ON</span>
							<span class="btn-store">Google Play</span>
						</div>
					</a>
					<a href="#" class="download-btn">
						<div class="btn-icon">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none">
								<path d="M18.71 19.5C17.88 20.74 17 21.95 15.66 21.97C14.32 22 13.89 21.18 12.37 21.18C10.84 21.18 10.37 21.95 9.1 22C7.79 22.05 6.8 20.68 5.96 19.47C4.25 17 2.94 12.45 4.7 9.39C5.57 7.87 7.13 6.91 8.82 6.88C10.1 6.86 11.32 7.75 12.11 7.75C12.89 7.75 14.37 6.68 15.92 6.84C16.57 6.87 18.39 7.1 19.56 8.82C19.47 8.88 17.39 10.1 17.41 12.63C17.44 15.65 20.06 16.66 20.09 16.67C20.06 16.74 19.67 18.11 18.71 19.5Z" fill="currentColor"/>
								<path d="M13 3.5C13.73 2.67 14.94 2.04 15.94 2C16.07 3.17 15.6 4.35 14.9 5.19C14.21 6.04 13.07 6.7 11.95 6.61C11.8 5.46 12.36 4.26 13 3.5Z" fill="currentColor"/>
							</svg>
						</div>
						<div class="btn-text">
							<span class="btn-label">Download on the</span>
							<span class="btn-store">App Store</span>
						</div>
					</a>
				</div>
			</div>
			<div class="download-visual fade-in">
				<div class="phone-showcase">
					<div class="phone-frame">
						<div class="phone-screen">
							<div class="app-interface">
								<div class="interface-header">
									<h3>Log into your account</h3>
								</div>
								<div class="interface-content">
									<div class="input-group">
										<label>Phone Number/ Email</label>
										<input type="text" placeholder="Enter your phone no./ email id.">
									</div>
									<div class="input-group">
										<label>Password</label>
										<input type="password" placeholder="Create a secure password">
									</div>
									<button class="interface-btn">Login</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.download {
		background: var(--secondary-dark);
		position: relative;
	}

	.download::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: radial-gradient(circle at 30% 70%, rgba(212, 175, 55, 0.1) 0%, transparent 70%);
		pointer-events: none;
	}

	.download-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 80px;
		align-items: center;
		position: relative;
		z-index: 1;
	}

	.section-title {
		font-family: 'Playfair Display', serif;
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 700;
		margin-bottom: 24px;
		color: var(--text-light);
	}

	.download-description {
		font-size: 1.1rem;
		color: var(--text-muted);
		line-height: 1.8;
		margin-bottom: 40px;
	}

	.download-buttons {
		display: flex;
		gap: 20px;
		flex-wrap: wrap;
	}

	.download-btn {
		display: flex;
		align-items: center;
		gap: 16px;
		padding: 16px 24px;
		background: var(--tertiary-dark);
		border: 2px solid var(--primary-gold);
		border-radius: 16px;
		color: var(--text-light);
		text-decoration: none;
		transition: all 0.3s ease;
		min-width: 200px;
	}

	.download-btn:hover {
		background: var(--primary-gold);
		color: var(--dark-bg);
		transform: translateY(-2px);
		box-shadow: var(--shadow-gold);
	}

	.btn-icon {
		color: var(--primary-gold);
		transition: color 0.3s ease;
	}

	.download-btn:hover .btn-icon {
		color: var(--dark-bg);
	}

	.btn-text {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
	}

	.btn-label {
		font-size: 0.8rem;
		opacity: 0.8;
		margin-bottom: 2px;
	}

	.btn-store {
		font-size: 1.1rem;
		font-weight: 600;
	}

	.phone-showcase {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.phone-frame {
		width: 300px;
		height: 600px;
		background: var(--dark-bg);
		border-radius: 40px;
		padding: 20px;
		box-shadow: var(--shadow-dark);
		border: 3px solid var(--primary-gold);
	}

	.phone-screen {
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, #0A0A0A 0%, #1A1A1A 100%);
		border-radius: 30px;
		position: relative;
		overflow: hidden;
	}

	.phone-screen::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('https://images.pexels.com/photos/1763075/pexels-photo-1763075.jpeg?auto=compress&cs=tinysrgb&w=400');
		background-size: cover;
		background-position: center;
		opacity: 0.2;
		z-index: 1;
	}

	.app-interface {
		position: relative;
		z-index: 2;
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: center;
		padding: 40px 30px;
	}

	.interface-header h3 {
		font-family: 'Playfair Display', serif;
		font-size: 1.8rem;
		color: var(--primary-gold);
		margin-bottom: 40px;
		text-align: center;
	}

	.input-group {
		margin-bottom: 24px;
	}

	.input-group label {
		display: block;
		color: var(--text-muted);
		font-size: 0.9rem;
		margin-bottom: 8px;
	}

	.input-group input {
		width: 100%;
		padding: 12px 16px;
		background: transparent;
		border: 1px solid var(--text-muted);
		border-radius: 8px;
		color: var(--text-light);
		font-size: 0.9rem;
	}

	.input-group input:focus {
		outline: none;
		border-color: var(--primary-gold);
	}

	.input-group input::placeholder {
		color: var(--text-muted);
		opacity: 0.7;
	}

	.interface-btn {
		width: 100%;
		padding: 16px;
		background: var(--gradient-primary);
		border: none;
		border-radius: 12px;
		color: var(--dark-bg);
		font-size: 1rem;
		font-weight: 600;
		cursor: pointer;
		margin-top: 20px;
	}

	@media (max-width: 1024px) {
		.download-content {
			grid-template-columns: 1fr;
			gap: 50px;
			text-align: center;
		}
		
		.download-buttons {
			justify-content: center;
		}
	}

	@media (max-width: 768px) {
		.download-buttons {
			flex-direction: column;
			align-items: center;
		}
		
		.download-btn {
			width: 100%;
			max-width: 280px;
			justify-content: center;
		}
		
		.phone-frame {
			width: 260px;
			height: 520px;
		}
		
		.app-interface {
			padding: 30px 20px;
		}
		
		.interface-header h3 {
			font-size: 1.5rem;
		}
	}
</style>