<section id="about" class="section about">
	<div class="container">
		<div class="about-content">
			<div class="about-text fade-in">
				<h2 class="section-title">
					The Ultimate <span class="gradient-text">Nightlife</span> Experience
				</h2>
				<p class="about-description">
					Scratch isn't just another event app â€“ it's your passport to the underground party scene. 
					We've curated the most exclusive events, from intimate rooftop gatherings to underground 
					warehouse parties that you won't find anywhere else.
				</p>
				<div class="stats">
					<div class="stat-item">
						<div class="stat-number gradient-text">10K+</div>
						<div class="stat-label">Active Users</div>
					</div>
					<div class="stat-item">
						<div class="stat-number gradient-text">500+</div>
						<div class="stat-label">Events Monthly</div>
					</div>
					<div class="stat-item">
						<div class="stat-number gradient-text">50+</div>
						<div class="stat-label">Cities</div>
					</div>
				</div>
				<a href="#download" class="btn-primary">
					Join the Community
				</a>
			</div>
			<div class="about-visual fade-in">
				<div class="visual-grid">
					<div class="visual-item">
						<img src="https://images.pexels.com/photos/1763075/pexels-photo-1763075.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Party atmosphere" />
					</div>
					<div class="visual-item">
						<img src="https://images.pexels.com/photos/1105666/pexels-photo-1105666.jpeg?auto=compress&cs=tinysrgb&w=400" alt="DJ performance" />
					</div>
					<div class="visual-item">
						<img src="https://images.pexels.com/photos/1540406/pexels-photo-1540406.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Crowd dancing" />
					</div>
					<div class="visual-item">
						<img src="https://images.pexels.com/photos/1267362/pexels-photo-1267362.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Night club" />
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.about {
		background: var(--dark-bg);
		position: relative;
	}

	.about-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 80px;
		align-items: center;
	}

	.section-title {
		font-family: 'Playfair Display', serif;
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 700;
		margin-bottom: 24px;
		color: var(--text-light);
	}

	.about-description {
		font-size: 1.1rem;
		color: var(--text-muted);
		line-height: 1.8;
		margin-bottom: 40px;
	}

	.stats {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 30px;
		margin-bottom: 40px;
	}

	.stat-item {
		text-align: center;
	}

	.stat-number {
		font-size: 2.5rem;
		font-weight: 700;
		display: block;
		margin-bottom: 8px;
	}

	.stat-label {
		color: var(--text-muted);
		font-size: 0.9rem;
		text-transform: uppercase;
		letter-spacing: 1px;
	}

	.visual-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 20px;
		transform: rotate(5deg);
	}

	.visual-item {
		border-radius: 20px;
		overflow: hidden;
		position: relative;
		aspect-ratio: 1;
		transition: all 0.3s ease;
	}

	.visual-item:hover {
		transform: scale(1.05);
		box-shadow: var(--shadow-gold);
	}

	.visual-item::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: var(--gradient-overlay);
		z-index: 1;
		transition: opacity 0.3s ease;
	}

	.visual-item:hover::before {
		opacity: 0;
	}

	.visual-item img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.visual-item:hover img {
		transform: scale(1.1);
	}

	.visual-item:nth-child(1) {
		transform: translateY(-20px);
	}

	.visual-item:nth-child(2) {
		transform: translateY(20px);
	}

	.visual-item:nth-child(3) {
		transform: translateY(10px);
	}

	.visual-item:nth-child(4) {
		transform: translateY(-10px);
	}

	@media (max-width: 1024px) {
		.about-content {
			grid-template-columns: 1fr;
			gap: 50px;
			text-align: center;
		}
		
		.stats {
			justify-content: center;
		}
	}

	@media (max-width: 768px) {
		.stats {
			grid-template-columns: 1fr;
			gap: 20px;
		}
		
		.stat-number {
			font-size: 2rem;
		}
		
		.visual-grid {
			transform: none;
		}
		
		.visual-item:nth-child(1),
		.visual-item:nth-child(2),
		.visual-item:nth-child(3),
		.visual-item:nth-child(4) {
			transform: none;
		}
	}
</style>