<style>
    :root {
        --primary-gold: #D4AF37;
        --secondary-gold: #F4E4BC;
        --dark-bg: #000000;
        --secondary-dark: #0A0A0A;
        --tertiary-dark: #1A1A1A;
        --text-light: #FFFFFF;
        --text-muted: #A0A0A0;
        --gradient-primary: linear-gradient(135deg, #D4AF37 0%, #F4E4BC 100%);
        --gradient-overlay: linear-gradient(135deg, rgba(212, 175, 55, 0.2) 0%, rgba(244, 228, 188, 0.1) 100%);
        --shadow-dark: 0 20px 40px rgba(0, 0, 0, 0.3);
        --shadow-gold: 0 10px 30px rgba(212, 175, 55, 0.3);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', sans-serif;
        background: var(--dark-bg);
        color: var(--text-light);
        line-height: 1.6;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .section {
        padding: 100px 0;
    }

    .gradient-text {
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .fade-in {
        animation: fadeInUp 0.8s ease-out;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .terms {
        background: var(--dark-bg);
        position: relative;
        min-height: 100vh;
    }

    .terms::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(circle at 20% 30%, rgba(212, 175, 55, 0.1) 0%, transparent 70%),
                    radial-gradient(circle at 80% 70%, rgba(212, 175, 55, 0.05) 0%, transparent 70%);
        pointer-events: none;
    }

    .terms-content {
        position: relative;
        z-index: 1;
        max-width: 800px;
        margin: 0 auto;
    }

    .terms-header {
        text-align: center;
        margin-bottom: 60px;
    }

    .section-title {
        font-family: 'Playfair Display', serif;
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 700;
        margin-bottom: 24px;
        color: var(--text-light);
    }

    .terms-subtitle {
        font-size: 1.2rem;
        color: var(--text-muted);
        line-height: 1.8;
        margin-bottom: 30px;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .last-updated {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 12px 24px;
        background: var(--tertiary-dark);
        border: 1px solid var(--primary-gold);
        border-radius: 25px;
        font-size: 0.9rem;
    }

    .updated-label {
        color: var(--text-muted);
    }

    .updated-date {
        color: var(--primary-gold);
        font-weight: 600;
    }

    .terms-body {
        margin-bottom: 60px;
    }

    .terms-section {
        margin-bottom: 50px;
        padding: 30px;
        background: var(--secondary-dark);
        border-radius: 20px;
        border: 1px solid rgba(212, 175, 55, 0.1);
        position: relative;
        overflow: hidden;
    }

    .terms-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: var(--gradient-primary);
    }

    .terms-section-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary-gold);
        margin-bottom: 20px;
        padding-left: 20px;
    }

    .terms-text {
        color: var(--text-light);
        font-size: 1rem;
        line-height: 1.8;
        margin-bottom: 15px;
        padding-left: 20px;
    }

    .terms-list {
        list-style: none;
        padding-left: 40px;
        margin-bottom: 15px;
    }

    .terms-list li {
        color: var(--text-light);
        font-size: 1rem;
        line-height: 1.8;
        margin-bottom: 8px;
        position: relative;
        padding-left: 20px;
    }

    .terms-list li::before {
        content: '•';
        color: var(--primary-gold);
        font-size: 1.2rem;
        position: absolute;
        left: 0;
        top: 0;
    }

    .terms-highlight {
        background: var(--tertiary-dark);
        border: 1px solid var(--primary-gold);
        border-radius: 12px;
        padding: 20px;
        margin: 20px 0;
        margin-left: 20px;
    }

    .terms-highlight p {
        color: var(--primary-gold);
        font-weight: 600;
        margin: 0;
    }

    .contact-info {
        background: var(--tertiary-dark);
        border-radius: 12px;
        padding: 20px;
        margin: 20px 0;
        margin-left: 20px;
    }

    .contact-info p {
        color: var(--text-light);
        margin-bottom: 10px;
    }

    .contact-info strong {
        color: var(--primary-gold);
    }

    .terms-footer {
        text-align: center;
        padding: 40px 0;
        border-top: 1px solid var(--tertiary-dark);
    }

    .footer-actions {
        display: flex;
        gap: 20px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-primary {
        display: inline-block;
        padding: 16px 32px;
        background: var(--gradient-primary);
        color: var(--dark-bg);
        text-decoration: none;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-gold);
    }

    .btn-secondary {
        display: inline-block;
        padding: 16px 32px;
        background: transparent;
        color: var(--text-light);
        text-decoration: none;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1rem;
        border: 2px solid var(--primary-gold);
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .btn-secondary:hover {
        background: var(--primary-gold);
        color: var(--dark-bg);
        transform: translateY(-2px);
    }

    @media (max-width: 768px) {
        .section {
            padding: 60px 0;
        }

        .terms-content {
            padding: 0 10px;
        }

        .terms-section {
            padding: 20px;
            margin-bottom: 30px;
        }

        .terms-section-title {
            font-size: 1.3rem;
            padding-left: 15px;
        }

        .terms-text {
            font-size: 0.95rem;
            padding-left: 15px;
        }

        .terms-list {
            padding-left: 30px;
        }

        .terms-highlight {
            margin-left: 15px;
            padding: 15px;
        }

        .contact-info {
            margin-left: 15px;
            padding: 15px;
        }

        .footer-actions {
            flex-direction: column;
            align-items: center;
        }

        .btn-primary,
        .btn-secondary {
            width: 100%;
            max-width: 300px;
        }
    }

    @media (max-width: 480px) {
        .terms-section {
            padding: 15px;
        }

        .terms-section-title {
            font-size: 1.2rem;
            padding-left: 10px;
        }

        .terms-text {
            font-size: 0.9rem;
            padding-left: 10px;
        }

        .terms-list {
            padding-left: 25px;
        }

        .terms-highlight {
            margin-left: 10px;
            padding: 12px;
        }

        .contact-info {
            margin-left: 10px;
            padding: 12px;
        }
    }
</style>
